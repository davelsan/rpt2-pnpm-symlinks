{
  "compilerOptions": {

    /* COMPILATION */
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,

    /* TYPE CHECKING*/
    "strict": true,

    /* MODULES */
    "baseUrl": ".",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
